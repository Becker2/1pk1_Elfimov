<Window x:Class="WpfApp2.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
            <RowDefinition Height="0.17*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Column="0">
                <Button x:Name="Add" Content="Добавить пациента" FontSize="5" BorderThickness="1" Click="Add_Click" Width="50" Height="12"/>
            </Viewbox>
            <Viewbox Grid.Column="1">
                <Button x:Name="Delete" Content="Удалить пациента" FontSize="5" BorderThickness="1" Click="Delete_Click" Width="50" Height="12"/>
            </Viewbox>
            <Viewbox Grid.Column="2">
                <Button x:Name="Import" Content="Импорт" FontSize="5" BorderThickness="1" Click="Import_Click" Width="50" Height="12"/>
            </Viewbox>
            <Viewbox Grid.Column="3">
                <Button x:Name="Export" Content="Экспорт" FontSize="5" BorderThickness="1" Click="Export_Click" Width="50" Height="12" />
            </Viewbox>
        </Grid>
        <ListBox Name="Data" Grid.Row="1"/>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Viewbox Grid.Row="0">
                <TextBlock Text="Фио пациента, дата рождения, СНИЛС"/>
            </Viewbox>
            <Viewbox Grid.Row="1">
                <TextBox Name="inf" Width="350" BorderThickness="1" FontSize="5"/>
            </Viewbox>
        </Grid>
    </Grid>
</Window>