<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800" MaxHeight="1080" MaxWidth="1920" Background="LightSkyBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="1" Grid.Row="0">
            <Label Content="Учет больница"/>
        </Viewbox>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Row="0" Grid.Column="1" >
                <Label Content="Логин" FontWeight="Medium"/>
            </Viewbox>
            <Viewbox Grid.Row="1" Grid.Column="1">
                <TextBox Name="Login" Width="120" Height="10" FontSize="5" FontWeight="Medium"/>
            </Viewbox>
            <Viewbox Grid.Row="2" Grid.Column="1" >
                <Label Content="Пароль" FontWeight="Medium" />
            </Viewbox>
            <Viewbox Grid.Row="3" Grid.Column="1">
                <TextBox Name="Password" Width="120" Height="10" FontSize="5" FontWeight="Medium"/>
            </Viewbox>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.2*"/>
                
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Column="1" Grid.Row="2" >
                <Button  Name="Join"
                         Content="Войти"
                         Height="10"
                         Width="90"
                         HorizontalAlignment="Center"
                         FontSize="5"
                         Background="Green"
                         FontWeight="Bold"
                         BorderBrush="White"
                         BorderThickness="0"
                         Foreground="White"
                         Click="Join_Click">
                </Button>
            </Viewbox>
        </Grid>
    </Grid>
</Window>
 